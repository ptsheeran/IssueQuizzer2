<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="approximatelyhungry.com.issuequizzer.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Trending Quizzes"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:textSize="40sp"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:text="Gun Violence"
        android:drawableLeft="@drawable/ic_pistol"
        android:paddingLeft="10dp"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:text="Drug Epidemic"
        android:drawableLeft="@drawable/ic_pill"
        android:paddingLeft="10dp"
        android:layout_marginTop="200dp"
        android:id="@+id/button" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_marginTop="38dp"
        android:background="@android:color/holo_green_light"
        android:drawableLeft="@drawable/ic_cash_multiple"
        android:paddingLeft="10dp"
        android:text="Pay Gap" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:text="Immigration/Refugees"
        android:drawableLeft="@drawable/ic_human_male_female"
        android:paddingLeft="10dp"
        android:layout_marginTop="400dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_green_light"
        android:text="War in Middle East"
        android:drawableLeft="@drawable/ic_sword_cross"
        android:paddingLeft="10dp"
        android:layout_marginTop="500dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_dark"
        android:text="Get Involved!"
        android:drawableLeft="@drawable/ic_sign_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="600dp" />

</RelativeLayout>